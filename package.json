{
  "name": "mdts",
  "version": "0.3.2",
  "description": "A markdown preview server.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mdts": "./bin/mdts"
  },
  "files": ["dist"],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && cp -R public/. dist/server/public",
